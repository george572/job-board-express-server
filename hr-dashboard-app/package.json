{
  "name": "hr-dashboard-app",
  "version": "1.0.0",
  "description": "Standalone HR dashboard â€“ same DB as main Samushao app",
  "license": "ISC",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "npm run build:css",
    "start:server": "nodemon server.js",
    "start:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch",
    "start:browser": "browser-sync start --proxy localhost:4000 --files 'public/**/*' 'views/**/*' --port 4001 --no-open",
    "dev": "concurrently \"npm:start:server\" \"npm:start:css\" \"npm:start:browser\"",
    "build:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@pinecone-database/pinecone": "^7.0.0",
    "bottleneck": "^2.19.5",
