    "dotenv": "^16.4.7",
    "ejs": "^4.0.1",
    "express": "^4.21.2",
    "express-session": "^1.19.0",
    "knex": "^3.1.0",
    "mammoth": "^1.11.0",
    "nodemailer": "^6.10.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.14.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0"
  }
